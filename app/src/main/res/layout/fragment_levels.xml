<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515"
        tools:context=".RulesFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#FFBC00"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="Choose level"
            android:textColor="#503B00"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/corner"
            android:text="В меню"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/t2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.17000002" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/t2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1"
            app:layout_constraintVertical_bias="0.17000002" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/t1"
            app:layout_constraintEnd_toStartOf="@+id/t3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/t1"
            app:layout_constraintTop_toTopOf="@+id/t1"
            app:layout_constraintVertical_bias="0.17000002" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/t4"
            app:layout_constraintEnd_toStartOf="@+id/t3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/t1"
            app:layout_constraintTop_toTopOf="@+id/t4"
            app:layout_constraintVertical_bias="0.17000002" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/t2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/t2"
            app:layout_constraintTop_toTopOf="@+id/t2"
            app:layout_constraintVertical_bias="0.17000002" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/t5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/t2"
            app:layout_constraintTop_toTopOf="@+id/t5"
            app:layout_constraintVertical_bias="0.17000002" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>